<h3 class="margin-bottom-sm article-title"><%= article.title %></h3>
<p>
  <% article.tag.split(",").each do |tag| %>
    <%= tag %>
  <% end %>
</p>
<p class="article-content"><%= article.content %></p>
<p>
  <%= article.created_at.strftime("%Y/%m/%d %H:%M:%S") %> 
  <% if @user.current_user?(session[:user]) %>
    <%= link_to "編集する", edit_article_path(article) %>
  <% end %>
</p>