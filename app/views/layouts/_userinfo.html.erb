<section class="user-info">
  <h4>ユーザー情報</h4>
  <table class="table table-hover">
    <tr class="row">
      <th class="col-sm-4">名前</th>
      <td class="col-sm-8"><%= user.name %></td>
    </tr>
    <% if user.current_user?(session[:user]) %>
      <tr class="row">
        <td class="col-sm-10 text-center"><%= link_to "編集", edit_user_path(user) %></td>
      </tr>
    <% end %>
  </table>
  <p>
    <%= link_to "ブログを作成する", new_user_homepage_path(@user) %>
  </p>
</section>